    <article class="post">
      <div class="title">
        <p>{{title}}</p>
        <span>{{body_text}}</span>
      </div>
      <div class="meta">
        {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>