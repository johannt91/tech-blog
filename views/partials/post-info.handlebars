    <article class="post">
      <div class="title">
        <h2>{{title}}</h2>
        <p>{{body_text}}</p>
      </div>
      <div class="meta">
        {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>