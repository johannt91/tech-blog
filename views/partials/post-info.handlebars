<article class="post">
  <div class="title">
    <span>{{title}}</span>
      <div class="meta">
        {{user.username}}
        on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </div>

    <div class="post-content">
      <p>{{body_text}}</p>
    </div>
</article>